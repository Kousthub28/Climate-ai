# Backend Environment Variables

# MongoDB Atlas Connection String
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/climateai?retryWrites=true&w=majority

# Server Configuration
PORT=5000
NODE_ENV=production

# JWT Secret for Authentication
JWT_SECRET=your_jwt_secret_key_here

# API Keys for Weather Services
OPENWEATHER_API_KEY=your_openweather_api_key_here
TOMORROW_API_KEY=your_tomorrow_api_key_here

# API Keys for Carbon Tracking
CLIMATIQ_API_KEY=your_climatiq_api_key_here
CARBON_INTERFACE_API_KEY=your_carbon_interface_api_key_here

# IBM Watson X AI Credentials
IBM_WATSONX_API_KEY=your_ibm_watsonx_api_key_here
IBM_WATSONX_PROJECT_ID=your_ibm_project_id_here

# Google Gemini AI API Key
GOOGLE_API_KEY=your_google_gemini_api_key_here

# Telegram Bot Configuration (for weather alerts)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
